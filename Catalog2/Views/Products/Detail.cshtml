@using Catalog.Entities.Concrete
@model Product


@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}






<div id="product-details" class="container pb-5">

    <div class="row">
        <div class="col-md-6">
            <img src="~/Frontend2/ProductImages/@Model.ImageURL" width="500" height="400">
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1 style="color:brown">@Model.Title</h1>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">

                        <span class="badge badge-success">@Model.Category.Name</span>
                        <br />                                         
                    <span class="product-number" style="float:right;margin-right:33px;color:chocolate"><i>Kodu: @Model.Code</i></span><br />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <div id="description">
                        @Html.Raw(Model.Description)
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-12">
                    <h4 style="color:brown;font-size:28px"><i class="fas fa-lira-sign"></i> @Model.Price / @Model.Installment taksit imkanı</h4>

                </div>
            </div>

            <div class="row">
                <div class="col-md-12">




                    <a class="btn btn-info" href="/Products/Update/@Model.Id">
                        <i class="fa fa-edit">
                        </i>
                        Düzenle
                    </a>
                    <a class="btn btn-danger" onclick="Confirm()" href="/Products/Delete/@Model.Id">
                        <i class="fa fa-trash">
                        </i>
                        Sil
                    </a>




                </div>
            </div>

        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-selected="true">Açıklama</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="pills-payment-tab" data-toggle="pill" href="#pills-payment" role="tab" aria-controls="pills-payment" aria-selected="false">Ödeme Şekli</a>
                    </li>
  

                </ul>



                <div class="tab-content" id="pills-tabContent">

                    <div class="tab-pane fade" id="pills-payment" role="tabpanel" aria-labelledby="pills-payment-tab">
                        <p>@Model.Price TL Kredi kartına 12 taksit yapıyoruz. @{var k = Model.Price / Model.Installment;} Taksit imkanıyla ödeme planı @Model.Installment x @k TL Detaylı bilgi için mağazamıza gelip bizimle iletişime geçebilirsiniz</p>
                    </div>
      
                </div>

            </div>
        </div>
    </div>

</div>  