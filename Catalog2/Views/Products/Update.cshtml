@model Catalog.Entities.Concrete.Product


@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@section CssFiles {
    <link rel="stylesheet" href="~/AdminPanel/assets/css/plugins/summernote-bs4.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

}



<section class="content" style="background-color:blanchedalmond">
    <div class="container-fluid">
        <div class="row">


            <div class="col-md-9">

                @using (Html.BeginForm("Update", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h1 class="card-title" style="">YENİ ÜRÜN GİRİŞİ</h1>
                        </div>

                        <div class="card-body">
                            <div class="form-group">

                                @Html.Label("Ürün kodu giriniz:")
                                @Html.TextBoxFor(x => x.Code, new { PlaceHolder = "Kodu...", @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Code, "", new { @style = "color:red" })

                            </div>

                            <div class="form-group">

                                @Html.Label("Ürün başlığı giriniz:")
                                @Html.TextBoxFor(x => x.Title, new { PlaceHolder = "Başlık...", @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Title, "", new { @style = "color:red" })

                            </div>

                            <div class="form-group">
                                @Html.Label("Ürün açıklaması giriniz:")
                                <textarea id="compose-textarea" name="Description" class="form-control" style="height: 300px"></textarea>
                            </div>

                            <div class="form-group">
                                <div style="float:left;margin-right:250px">
                                    @Html.Label("Ürün fiyatı giriniz:")
                                    @Html.TextBoxFor(x => x.Price, new { type = "number", min = "0", step = "0.50", PlaceHolder = "Fiyat(₺)...", @class = "form-control", style = "width:300px" })
                                    @Html.ValidationMessageFor(x => x.Price, "", new { @style = "color:red" })

                                </div>
                                <div>
                                    @Html.Label("Uygulanabilecek taksit sayısı giriniz:")
                                    @Html.TextBoxFor(x => x.Installment, new { type = "number", min = "1", step = "1", PlaceHolder = "Taksit...", @class = "form-control", style = "width:300px" })
                                    @Html.ValidationMessageFor(x => x.Installment, "", new { @style = "color:red" })
                                </div>
                            </div>

                            <div class="form-group">

                                @Html.Label("Aktiflik durumu giriniz:")
                                @Html.DropDownListFor(x => x.Status, (List<SelectListItem>)ViewBag.StatusType, new { @class = "form-control" })

                            </div>


                            <div class="form-group">
                                @Html.Label("Ürün kategorisi girin:")
                                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.valueCategory, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Ürün görseli yükleyiniz:")
                                <br />
                                <input type="file" name="ImageURL" />
                                <p class="help-block">Max. 32MB</p>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="float-right">

                                <button type="submit" class="btn btn-primary"><i class="fa fa-save fa-2x "></i> Kaydet</button>
                                <button style="float:right" type="reset" class="btn btn-danger"><i class="fa fa-trash-o fa-2x"></i> İptal Et</button>
                            </div>
                            <br /><br />
                        </div>

                    </div>

                }


            </div>

        </div>

    </div>
</section>



@section Scripts {
    <script src="~/AdminPanel/assets/js/plugins/summernote.min.js"></script>

}


<script src="~/AdminPanel/assets/js/plugins/jquery.min.js"></script>
<script src="~/AdminPanel/assets/js/plugins/adminlte.min.js"></script>
<script src="~/AdminPanel/assets/js/plugins/summernote-bs4.min.js"></script>




<script>
    $(function () {
        //Add text editor
        $('#compose-textarea').summernote()
    })</script>